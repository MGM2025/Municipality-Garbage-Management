<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <style>
        /* General Body Styling */
        body {
            background-color: black;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            height: 100vh;
        }

        /* Heading Styling */
        h1 {
            margin-top: 30px;
            color: rgb(248, 152, 34);
            font-size: 36px;
            text-align: center;
        }

        /* Form Container Styling */
        .form {
            background-color: rgba(255, 255, 255, 0.2); /* Transparent form */
            border-radius: 15px;
            width: 100%;
            max-width: 700px;
            padding: 20px;
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(8px); /* Blurring background behind form */
            margin-top: 20px;
        }

        h2 {
            text-align: center;
            color: white;
        }

        /* Input Styling */
        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
            background-color: rgba(255, 255, 255, 0.8);
        }

        /* Password Toggle Styling */
        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }

        /* Button Styling */
        button {
            background-color: rgb(248, 234, 34); 
            color: black;
            border-radius: 5px;
            font-size: larger;
            border: none;
            padding: 10px 30px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: rgb(248, 200, 34);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <h1>Admin Login</h1>
    <div class="form">
        <h2>Login Here</h2>
        <form action="/admin/login" method="post" id="loginForm">
            <div class="card">
                <label for="userId">Email:</label>
                <input type="text" id="userId" name="email" placeholder="Enter your Email ID" required>
            </div>

            <div class="card password-wrapper">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <span class="toggle-password" onclick="togglePasswordVisibility('password')">üëÅÔ∏è</span>
            </div>

            <div class="card">
                <button type="submit">Login</button>
                <a href="register.ejs">don't have an account</a>
            </div>
        </form>
    </div>

    <script>
        // Password Visibility Toggle Function
        function togglePasswordVisibility(fieldId) {
            const passwordField = document.getElementById(fieldId);
            const passwordIcon = passwordField.nextElementSibling;
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                passwordIcon.textContent = 'üôà'; // Change icon to hide
            } else {
                passwordField.type = 'password';
                passwordIcon.textContent = 'üëÅÔ∏è'; // Change icon to show
            }
        }

        // Form Submission Handling
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            

            // Check if any field is empty
            const userId = document.getElementById('userId').value;
            const password = document.getElementById('password').value;

            if (!userId || !password) {
                alert('Please fill in both User ID and Password.');
                e.preventDefault();
                return;
            }

            // If everything is valid, show success alert
            // alert('Login successful!');
        });
    </script>
</body>
</html>
